<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_horizontal_margin"
        android:layout_marginVertical="@dimen/default_vertical_margin"
        android:orientation="vertical">

        <TextView
            style="@style/RijksText.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_title" />

        <TextView
            android:id="@+id/long_title"
            style="@style/RijksText.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/first_names" />

        <TextView
            style="@style/RijksText.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_vertical_margin_half"
            android:text="@string/object_number" />

        <TextView
            android:id="@+id/object_number"
            style="@style/RijksText.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/first_names" />

        <TextView
            style="@style/RijksText.H2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_vertical_margin_half"
            android:text="@string/publication_places" />

        <TextView
            android:id="@+id/production_place"
            style="@style/RijksText.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/cities" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
